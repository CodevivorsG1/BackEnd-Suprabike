<!DOCTYPE html>
<html>
    <head>
        <title>CATALOGO COMPONENTES SUPRABIKES</title>
        <meta charset="utf-8">
    </head>
    <body>
        <h1>CATALOGO PARTES PARA BICIS</h1>
        <table>
            <thead>
                <tr>
                    <th style="width: 150px;">Tipo</th>
                    <th style="width: 150px;">Marca</th>
                    <th style="width: 150px;">Material</th>
                    <th style="width: 150px;">Precio</th>
                </tr>
            </thead>

            <tbody>
                <% @components.each do |component| %>
                    <tr>
                        <td><%= component.type_component %></td>
                        <td><%= component.brand_component %></td>
                        <td><%= component.material_component %></td>
                        <td><%= component.price_component %></td>
                    </tr>
                <%end%>
            </tbody>
        </table>
    </body>
</html>